<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightreddd"
    tools:context=".ReturnActivity">

    <ImageView
        android:id="@+id/backgrouunnd"
        android:layout_width="778dp"
        android:layout_height="602dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="372dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.267"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/rro" />

    <ImageView
        android:id="@+id/returnlogo"
        android:layout_width="46dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/returnimg" />

    <TextView
        android:id="@+id/returnbook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Return Book"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/returnlogo" />

    <TextView
        android:id="@+id/userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="57dp"
        android:text="User ID"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/returnbook" />

    <TextView
        android:id="@+id/bookid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="56dp"
        android:text="Book ID"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userid" />

    <TextView
        android:id="@+id/bookname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="56dp"
        android:text="Book Name"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookid" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="56dp"
        android:text="User Name"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookname" />

    <TextView
        android:id="@+id/issuedate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="56dp"
        android:text="Issue Date"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <TextView
        android:id="@+id/duedate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="56dp"
        android:text="Due Date"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/issuedate" />

    <EditText
        android:id="@+id/edituserid"
        android:layout_width="213dp"
        android:layout_height="32dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="128dp"
        android:background="@color/grey"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/userid"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editbookid"
        android:layout_width="213dp"
        android:layout_height="32dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="46dp"
        android:background="@color/grey"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/bookid"
        app:layout_constraintTop_toBottomOf="@+id/edituserid" />

    <EditText
        android:id="@+id/editbookname"
        android:layout_width="213dp"
        android:layout_height="32dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="56dp"
        android:background="@color/grey"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/bookname"
        app:layout_constraintTop_toBottomOf="@+id/editbookid" />

    <EditText
        android:id="@+id/editusername"
        android:layout_width="213dp"
        android:layout_height="32dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="48dp"
        android:background="@color/grey"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/username"
        app:layout_constraintTop_toBottomOf="@+id/editbookname" />

    <EditText
        android:id="@+id/editissuedate"
        android:layout_width="213dp"
        android:layout_height="32dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="52dp"
        android:background="@color/grey"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintStart_toEndOf="@+id/issuedate"
        app:layout_constraintTop_toBottomOf="@+id/editusername" />

    <EditText
        android:id="@+id/editduedate"
        android:layout_width="213dp"
        android:layout_height="32dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="52dp"
        android:background="@color/grey"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintStart_toEndOf="@+id/duedate"
        app:layout_constraintTop_toBottomOf="@+id/editissuedate" />

    <Button
        android:id="@+id/btnreturn"
        android:layout_width="205dp"
        android:layout_height="67dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="68dp"
        android:text="Return"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editduedate" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="231dp"
        android:layout_height="109dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editduedate"
        app:srcCompat="@drawable/rectbtn" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="16dp"
        android:text="Return"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/btnreturn"
        app:layout_constraintTop_toTopOf="@+id/btnreturn" />

</androidx.constraintlayout.widget.ConstraintLayout>