<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:background="@drawable/home">

    <Button
        android:id="@+id/borrowBook"
        android:layout_width="124dp"
        android:layout_height="89dp"
        android:layout_marginStart="36dp"

        android:layout_marginTop="224dp"
        android:background="@color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/request"

        android:layout_width="97dp"
        android:layout_height="92dp"
        android:layout_marginStart="37dp"


        android:layout_marginTop="34dp"
        android:layout_marginBottom="64dp"
        android:background="@color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/Category"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/borrowBook" />

    <Button
        android:id="@+id/returnBook"

        android:layout_width="122dp"
        android:layout_height="82dp"
        android:layout_marginTop="226dp"

        android:layout_marginEnd="39dp"
        android:background="@color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonProfile"
        android:layout_width="84dp"
        android:layout_height="82dp"
        android:layout_marginEnd="64dp"

        android:layout_marginBottom="30dp"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/Category"
        android:layout_width="352dp"
        android:layout_height="52dp"
        android:layout_marginStart="36dp"

        android:layout_marginBottom="104dp"
        android:background="@color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/buttonProfile"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnview"
        android:layout_width="183dp"
        android:layout_height="67dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="112dp"
        android:backgroundTint="@color/lightreddd"
        android:text="View Book"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>